<Window x:Class="Assignment_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="130" Width="250">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5" Text="Name" />
            <TextBox Margin="5" Name="uxName" Width="150" Height="Auto" TextChanged="TextBox_TextChanged" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5" Text="Password" />
            <PasswordBox Margin="5" Name="uxPassword" Width="150" Height="Auto" PasswordChanged="PasswordBox_TextChanged" />
        </StackPanel>
        <Button Margin="5" Name="uxSubmit" Content="Submit" Width="210" HorizontalAlignment="Left" IsEnabled="False" Click="uxSubmit_Click" />
    </StackPanel>
</Window>
