<Window x:Class="Assignment_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_04"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
    <StackPanel Orientation="Horizontal">
        <TextBlock Margin="5" Height="20" Text="Enter valid USA/Canadian Zip Code:" />
            <TextBox x:Name="uxZipCode" Margin="5" Width="150" Height="Auto" TextChanged="ZipCodeBox_TextChanged"/>
    </StackPanel>
        <Button x:Name="uxSubmit" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="Auto" Content="Submit"  IsEnabled="False" Click="uxSubmit_Click"/>
    </StackPanel>
</Window>
