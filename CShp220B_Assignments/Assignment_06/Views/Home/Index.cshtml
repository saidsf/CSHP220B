@model Assignment_06.Models.BdCard

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1>Birthday Card Generator</h1>
    </div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()

            <p>
                <label>From:</label> @Html.TextBoxFor(t => t.From,
                new { @class = "form-control", maxlength = 30, style = "width:200px;" })
            </p>

            <p>
                <label>To:</label> @Html.TextBoxFor(t => t.To,
                new { @class = "form-control", maxlength = 30, style = "width:200px;" })
            </p>

            <p>
                <label>Message:</label> @Html.TextBoxFor(t => t.Message,
                new { @class = "form-control", maxlength = 30, style = "width:200px;" })
            </p>

            <div class="btn btn-success">
                <input type="submit" value="Send Card" />
            </div>
        }
</body>
</html>
